<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Cabeçalho contendo meta tags, título e links para arquivos CSS -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Paschoalotto Desafio Técnico</title>
    <!-- Links para arquivos de estilos (Bootstrap e CSS personalizado) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PaschoalottoDesafio.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Estrutura principal do layout, dividido em cabeçalho, conteúdo e rodapé -->
    <div class="d-flex flex-column min-vh-100">
        <!-- Cabeçalho da página com a barra de navegação -->
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <div class="d-flex align-items-center">
                        <img src="~/images/user-avatar.jpg" alt="User Avatar" class="rounded-circle mr-2" style="width: 40px; height: 40px;" />
                        <span class="text-light mr-3 d-none d-sm-inline">Edmur Jr</span>
                    </div>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Paschoalotto Desafio Técnico</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </nav>
        </header>
        <!-- Conteúdo principal da página -->
        <div class="container-fluid flex-grow-1">
            <div class="row h-100">
                <nav class="col-md-2 d-md-block bg-light sidebar collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="position-sticky pt-3">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index">
                                    Usuários
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
                <!-- Área onde o conteúdo da página específica será renderizado -->
                <main class="col-md-10 ms-sm-auto px-md-4">
                    @RenderBody()
                </main>
            </div>
        </div>
        <!-- Rodapé da página -->
        <footer class="border-top footer text-muted d-flex justify-content-center align-items-center" style="height: 100px;">
            <div>
                &copy; <script>document.write(new Date().getFullYear());</script> Edmur G Siva Jr. Todos os direitos reservados.
            </div>
        </footer>

    </div>
    <!-- Scripts JavaScript para funcionalidades como jQuery e Bootstrap -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>