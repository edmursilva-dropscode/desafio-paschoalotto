<div id="mensagem">
    @if (TempData.ContainsKey("mensagem"))
    {
        var mensagemObj = TempData["mensagem"];
        if (mensagemObj != null)
        {
            var mensagemString = mensagemObj.ToString();
            if (mensagemString != null)
            {
                var mensagem = MensagemModel.Desserializar(mensagemString);
                if (mensagem != null)
                {
                    if (mensagem.Tipo == TipoMensagem.Erro)
                    {
                        <div class="alert alert-warning mt-3 alert-dismissible fade show" role="alert">
                            @mensagem.Texto
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success mt-3 alert-dismissible fade show" role="alert">
                            @mensagem.Texto
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                }
            }
        }
    }
</div>
@*Valida o tipo de mensagem a ser exibida*@